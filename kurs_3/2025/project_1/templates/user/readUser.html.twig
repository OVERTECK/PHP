<!DOCTYPE html>
<html lang='en'>
<head>
    <meta charset='UTF-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <title>User</title>
</head>
<body>
    
    <table>
        <thead>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Адрес</th>
            <th>Телефон</th>
            <th>Эл. почта</th>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{user.getFirstName}}</td>
                    <td>{{user.getSecondName}}</td>
                    <td>{{user.getLastName}}</td>
                    <td>{{user.getAddress}}</td>
                    <td>{{user.getPhone}}</td>
                    <td>{{user.getEmail}}</td>
                    <td>
                        <form action='{{ path('edit_page', {user: user.id}) }}' method='POST'>
                            <button>
                                Редактировать
                            </button>
                        </form>
                    </td>
                    <td>
                        <form action='{{ path('delete_user', {user: user.id}) }}' method='POST'>
                            <input type="hidden" name="_method" value="DELETE">
                            <button>
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <form action='{{ path('create_user_page') }}' method='GET'>
        <button>Создать пользователя</button>
    </form>
</body>
</html>